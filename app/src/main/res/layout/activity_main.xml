<?xml version="1.0" encoding="utf-8"?>
<com.example.ccei.recyclerviewtotal.CollapsingSwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--tools:context="com.example.ccei.recyclerviewtotal.MainActivity">-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/zig_zag_recycler_view"/>

            <LinearLayout
                android:id="@+id/custom_view_bar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#FF243F61"
                android:orientation="horizontal"
                android:padding="4dp">
                <TextView
                    android:id="@+id/custom_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:text="이곳은 위젯을 확장할 수 없습니다"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"/>
            </LinearLayout>
    </FrameLayout>
</com.example.ccei.recyclerviewtotal.CollapsingSwipeRefreshLayout>
